{
  "version": 2,
  "builds": [
    {
      "src": "/client/(.*)",
      "use": "@vercel/static-build",
      "config": { "yarnBuildScript": "build" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/client/$1" }
  ]
}
