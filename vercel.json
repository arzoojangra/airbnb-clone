{
    "builds": [
      {
        "src": "client",
        "use": "@vercel/static-build",
        "config": {
          "buildCommand": "yarn build",
          "outputDirectory": "dist/client"
        }
      },
      {
        "src": "api",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "handle": "filesystem" },
      { "src": "/api/(.*)", "dest": "/api/$1" },
      { "src": "/(.*)", "dest": "/client/$1" }
    ]
  }
  